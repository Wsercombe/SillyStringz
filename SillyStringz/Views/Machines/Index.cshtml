@{
  Layout = "_Layout";
}

@using SillyStringz.Models;
@model List<SillyStringz.Models.Machine>;

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>We have no machines!</h3>
} 

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
}

<p>@Html.ActionLink("Add new machine", "Create")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>